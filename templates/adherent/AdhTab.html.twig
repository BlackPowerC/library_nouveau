{% block adhList %}
	<h3>Liste des adhérents</h3>
    <table class="table">
		<thead>
			<tr>
				<th scope="col">N°</th>
				<th scope="col">Nom</th>
				<th scope="col">Prénom</th>
                <th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			{% for adherent in adherents %}
				<tr>
					<td>{{ adherent.id }}</td>
                    <td>{{ adherent.nom }}</td>
                    <td>{{ adherent.prenom }}</td>
                    <td>{{ adherent.datenaiss }}</td>
					<td>
						<a href="{{ path('edit_adh', {'adherent' : adherent.id}) }}">modifier</a>
						<a href="{{ path('adh_del', {'adherent' : adherent.id}) }}">supprimer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="2">no records found</td>
                    <td colspan="2">no records found</td>
                    <td colspan="2">no records found</td>
                    <td colspan="2">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('adh_ajout') }}">AJOUTER</a>
{% endblock %}
